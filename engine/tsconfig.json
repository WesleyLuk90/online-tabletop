{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "src",
        "sourceMap": true,
        "declaration": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "strictPropertyInitialization": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.spec.ts"]
}
