{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "types": ["jest"],
        "strictNullChecks": true,
        "baseUrl": ".",
        "downlevelIteration": true,
        "paths": {
            "protocol": ["protocol"]
        }
    },
    "include": ["server/src/**/*", "protocol/src/**/*"]
}
