{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "baseUrl": ".",
        "downlevelIteration": true,
        "paths": {
            "engine/*": ["engine/*"]
        },
        "experimentalDecorators": true
    },
    "include": ["engine/src/**/*.ts", "server/src/**/*.ts"]
}
