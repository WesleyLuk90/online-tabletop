{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "types": ["jest"],
        "strictNullChecks": true,
        "baseUrl": "../",
        "paths": {
            "engine/*": ["engine/src/*"]
        },
        "experimentalDecorators": true,
        "noEmit": true
    },
    "include": ["src/**/*.ts", "test/**/*.ts", "../engine/src/**/*.ts"]
}
